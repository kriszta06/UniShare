<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uploadbg"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/custom_edittext"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bgimg"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/lavander"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/uploadCaption"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/custom_edittext"
                android:hint="@string/add_a_caption"
                android:padding="16dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                tools:ignore="Autofill,InefficientWeight,TextFields" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/lavander"
                android:src="@drawable/ic_send"
                android:tint="@color/white"
                android:contentDescription="@string/send_message"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>